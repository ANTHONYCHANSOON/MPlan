<%- include("header") -%>
<br>

<div class="box" id="heading">
    <h1>Need to buy</h1>
</div>

<div class="box">

    <% data.forEach(function(item){ %>
    <form action="/deleteinventory" method="post">
        <div class="item">
            <input type="checkbox" name="checkBox" value="<%= item._id %>" onChange="this.form.submit()">
            <p class = "ptagsinventory"><%=  item.name  %></p>
        </div>
    </form>
    <% }) %>

    <form class="item" action="/addinventory" method="post">
        <input type="text" name="newinventory" placeholder="New Item" autocomplete="off">
        <button class = "buttonaddinventory" type="submit" name="list" value="inventory">+</button>
    </form>
</div>


<br><br>
<%- include("footer") -%>